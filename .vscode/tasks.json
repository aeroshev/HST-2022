{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make dbg=1",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": "build"
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "command": "make clean; make dbg=1",
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}